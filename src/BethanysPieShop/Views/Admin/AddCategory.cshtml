@model AddCategoryViewModel

<title>Add category</title>
<h2>Add category</h2>
<form asp-controller="Admin" asp-action="AddCategory" method="post" class="form-horizontal" role="form">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CategoryName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Description" class="form-control" />
        </div>
    </div>
    @if (ViewBag.IsAdded != null && ViewBag.IsAdded)
    {
        <div>
            <label>@ViewBag.AddedCategoryName is added</label>
        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </div>
</form>