@using Microsoft.AspNetCore.Mvc.Rendering
@model AddPieDropDownViewModel

<title>Add pie</title>
<h2>Add pie</h2>
<form asp-controller="Admin" asp-action="AddPieDropDown" method="post" class="form-horizontal" role="form">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PieName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PieName" class="form-control" />
            <span asp-validation-for="PieName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="CategoryId" asp-items="@(new SelectList(items: Model.Categories, dataValueField: "CategoryId", dataTextField: "CategoryName"))" ></select>
            <span asp-validation-for="Categories" class="text-danger"></span>
        </div>
    </div>
    @if (ViewBag.IsAdded != null && ViewBag.IsAdded)
    {
        <div>
            <label>@ViewBag.AddedPieName is added</label>
        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </div>
</form>