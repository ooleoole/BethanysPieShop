@model IEnumerable<Pie>

<li class="dropdown">
    <a asp-controller="Pie"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">PiesOfTheWeek<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var pie in Model)
        {
            <li>
                <a asp-controller="Pie" asp-action="Details"
                   asp-route-id="@pie.PieId">@pie.Name</a>
            </li>
        }
    </ul>
</li>